{
  "compilerOptions": {
    "target": "ES2023",
    "rootDir": "src/main",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "strict": true,
    "inlineSources": true,
    "outDir": "build/main",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/main/**/*",
    "src/main/i18n/locales/**/*.json"
  ]
}
